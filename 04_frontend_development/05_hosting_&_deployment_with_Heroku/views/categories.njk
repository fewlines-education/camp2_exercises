{% extends "layout.njk" %}

{% block breadcrumb %}
  <li class="breadcrumb-item" aria-current="page"><a href="/">Home</a></li>
{% endblock %}

{% block content %}

    <div class="row mt-1">
    {% for category in categories %}

      <div class="col-3 mb-1">
        <a href="/categories/{{category.id}}">
          <div class="card">
            <div class="card-body">
              <p>
                {{category.label}}
              </p>
            </div>
          </div>
        </a>
      </div>


    {% endfor %}

    </div>



{% endblock %}
